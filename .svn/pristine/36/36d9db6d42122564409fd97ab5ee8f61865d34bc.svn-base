.lead-sec {
	padding:100px 0px 50px 0px;
}
.lead-row {
	margin-top: 4%;
}
.lead-box img {
	width: 90%;
}
.lead-box > div {
	padding:5% 8%;
	transform: translate(4%,-45%);
	background:white;
	border:1px solid white;
	text-align: left;
	width: 90%;
}
.lead-box > div:hover {
	background:#EBF7F5;
	border:1px solid #91cecb;
}

.lead-box > div >h4 {
	text-transform: uppercase;
	font-weight: 800;
	font-size: 16px;
	margin-bottom: 5px;
	margin-top: 0px;
}

.lead-box > div > p {
	padding:0px;
	margin-bottom:5px;
	font-size: 14px;
}
.lead-box > div > a > i {
	margin-right: 5%;
	font-size: 18px;
	color: #515978;
}